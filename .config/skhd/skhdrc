# Restart yabai
alt + cmd - r: yabai --restart-service && skhd --restart-service && sketchybar --reload

### Switch focus to another destop ###
cmd - 1 : yabai -m space --focus 1 
cmd - 2 : yabai -m space --focus 2 
cmd - 3 : yabai -m space --focus 3 
cmd - 4 : yabai -m space --focus 4 
cmd - s : yabai -m space --focus 5

# Move window to space
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2 
cmd + shift - 3 : yabai -m window --space 3 
cmd + shift - 4 : yabai -m window --space 4 
cmd + shift - s : yabai -m window --space 5

## Focus windows
cmd - l : yabai -m window --focus east
cmd - h : yabai -m window --focus west

# Full screen window
cmd + shift - f: yabai -m window --toggle zoom-parent

# Split toggle
# ;
cmd - 0x29: yabai -m window --toggle split

# Pseudo (float)
cmd + shift - space: yabai -m window --toggle float

#resize windows
cmd + shift - 0x1B : yabai -m window --resize right:-20:0
cmd + shift - 0x18 : yabai -m window --resize right:20:0

# Swap windows
cmd + shift - h : yabai -m window --swap west   # Send window to space on the left
cmd + shift - l : yabai -m window --swap east   # Send window to space on the left

# Apps
cmd - return: open -n -a kitty
