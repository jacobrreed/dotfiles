map f1 toggle_marker text 1 TEST 
map f2 toggle_marker text 2 ERROR
map f6 save_as_session --use-foreground-process --relocatable ~/.local/share/kitty/last-session.session
map f5 goto_session ~/.local/share/kitty/last-session.session


