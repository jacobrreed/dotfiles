shell-integration=detect
shell-integration-features=cursor,sudo,title,ssh-env,ssh-terminfo
window-save-state=always
clipboard-write=allow
clipboard-read=allow
clipboard-trim-trailing-spaces=true
clipboard-paste-protection=false
clipboard-paste-bracketed-safe=true
image-storage-limit=4000000000
copy-on-select=clipboard
confirm-close-surface=false
link-previews = true

# Keybinds
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+r=reload_config
# Tmux like binds
keybind = ctrl+t>c=new_tab
keybind = ctrl+t>n=next_tab
keybind = ctrl+t>p=previous_tab
keybind = ctrl+t>x=close_surface
keybind = ctrl+t>b=new_split:down
keybind = ctrl+t>v=new_split:right
keybind = ctrl+t>1=goto_tab:1
keybind = ctrl+t>2=goto_tab:2
keybind = ctrl+t>3=goto_tab:3
keybind = ctrl+t>4=goto_tab:4
keybind = ctrl+t>5=goto_tab:5
keybind = ctrl+t>6=goto_tab:6
keybind = ctrl+t>7=goto_tab:7
keybind = ctrl+t>8=goto_tab:8
keybind = ctrl+t>9=goto_tab:9
keybind = ctrl+t>h=goto_split:left
keybind = ctrl+t>j=goto_split:bottom
keybind = ctrl+t>k=goto_split:top
keybind = ctrl+t>l=goto_split:right
keybind = ctrl+t>shift+h=resize_split:left,100
keybind = ctrl+t>shift+j=resize_split:down,100
keybind = ctrl+t>shift+k=resize_split:up,100
keybind = ctrl+t>shift+l=resize_split:right,100
keybind = ctrl+t>enter=toggle_split_zoom
